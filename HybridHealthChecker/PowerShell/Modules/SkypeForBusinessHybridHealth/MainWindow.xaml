<Window x:Class="HybridHealthChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Name="MainForm" Title="Microsoft 365 FastTrack" Height="450" Width="800" ResizeMode="NoResize" Background="#FF0874AA">
    <Grid>
        <Label Content="Skype for Business Hybrid Health Check Tool" Margin="10,10,10,0" VerticalAlignment="Top" Height="40" FontSize="18" Foreground="White"/>
        <Image Name="picSfb" Source="sfb.png" Margin="715,10,10,349"/>
        <TabControl Margin="10,55,10,34">
            <TabItem Header="Configuration">
                <Grid>
                    <Label Content="On-Premises Configuration"  HorizontalAlignment="Left" Height="32" Margin="10,10,0,0" VerticalAlignment="Top" Width="748" FontSize="16"/>
                    <TextBlock HorizontalAlignment="Left" Margin="29,47,0,0" TextWrapping="Wrap" Text="On-premises version:" VerticalAlignment="Top" Height="22" Width="300"/>
                    <ComboBox Name="comboVersion" Margin="0,0,10,235" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" HorizontalContentAlignment="Stretch" Width="210"/>
                    <Label Content="Required Software"  HorizontalAlignment="Left" Height="32" Margin="10,74,0,0" VerticalAlignment="Top" Width="748" FontSize="16"/>
                    <TextBlock Name="txtOnPremModuleName" Margin="0,0,439,171" TextWrapping="Wrap" Text="Skype for Business PowerShell Module" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="300"/>
                    <TextBlock HorizontalAlignment="Left" Margin="29,138,0,0" TextWrapping="Wrap" Text="Skype for Business Online PowerShell Module" VerticalAlignment="Top" Height="22" Width="300"/>
                    <Button Name="btnAdminInstalled" Content="Installed" IsEnabled="false" Margin="0,0,10,171" Height="24" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="150"/>
                    <Button Name="btnSFBOAdminInstalled" Content="Installed" IsEnabled="False" Margin="0,0,10,137" Height="24" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="150"/>
                    <Button Name="btnStartTests" IsEnabled="False" Content="Start Tests" Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="110" Height="24"/>
                </Grid>
            </TabItem>
            <TabItem Header="Results">
                <Grid/>
            </TabItem>
            <TabItem Header="Help">
                <Grid>
                    <Label Content="Tool Information"  HorizontalAlignment="Left" Height="32" Margin="10,10,0,0" VerticalAlignment="Top" Width="748" FontSize="16"/>
                    <TextBlock HorizontalAlignment="Left" Margin="29,47,0,0" TextWrapping="Wrap" Text="Version:" VerticalAlignment="Top" Height="22" Width="300"/>
                    <TextBlock Name="txtVersion" Margin="0,0,10,235" TextWrapping="Wrap" Text="[version]" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" TextAlignment="Right" Width="226"/>
                    <TextBlock HorizontalAlignment="Left" Margin="29,74,0,0" TextWrapping="Wrap" Text="Feedback:" VerticalAlignment="Top" Height="22" Width="300"/>
                    <TextBlock Name="txtFeedback" Margin="0,0,10,208" TextWrapping="Wrap" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" TextAlignment="Right" Width="226"><Hyperlink Name="navFeedback" NavigateUri="mailto:jason.shave@microsoft.com">Send email</Hyperlink></TextBlock>

                </Grid>
            </TabItem>

        </TabControl>
        <StatusBar DockPanel.Dock="Bottom"  Margin="0,392,0,0" Background="#FF0874AA" >
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem>
                <TextBlock Name="txtStatus1" Foreground="White" Width="462" Margin="10,0,0,0">Ready</TextBlock>
            </StatusBarItem>
            <StatusBarItem Grid.Column="1">
                <ProgressBar Name="barStatus" Value="30" Width="80" Height="18"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>

</Window>
